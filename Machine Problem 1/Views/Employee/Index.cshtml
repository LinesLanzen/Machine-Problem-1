@model List<Employee>

<h2>Employee List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Daily Salary</th>
            <th>Monthly Salary</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName @employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.EmploymentStatus</td>
                <td>$@employee.SalaryPerDay.ToString("F2")</td>
                <td>$@employee.SalaryPerMonth.ToString("F2")</td>
                <td>@Html.ActionLink("Details", "ShowDetails")</td>
            </tr>
        }
    </tbody>
</table>


